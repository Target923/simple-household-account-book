generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expense {
  id                   String   @id @default(uuid())
  amount               Int
  memo                 String?
  selectedCategoryName String
  date                 DateTime
  sortOrder            Int
}

model Category {
  id        String  @id @default(uuid())
  name      String  @unique
  color     String
  sortOrder Int
}

model budget {
  id           String  @id @default(uuid())
  amount       Int
  categoryName String
  month        String
  sortOrder    Int
}